<div class='category text-secondary'>
  <ul class='double mr-0'>
    <% @article = Article.where('category_id = ?', params[:id])%>
    <% @article.each do |art_cat| %>
    <li>
      <div class='d-flex flex-row mb-3 bg-white'>
        <%= cl_image_tag(art_cat.image.key, width: 500, crop: :scale)%>
        <div class='d-flex flex-column mx-2'>
          <strong class='article-header'><%=link_to(art_cat.title.truncate_words(15), article_path(art_cat.id)) %></strong>
          <p><%= art_cat.text.truncate_words(5) %></p>
          <em><%= art_cat.author.name %><em>
              <div class='mt-3'>
                <%= show_vote_btn(art_cat)%>
                <em class="badge bg-primary mx-3"><%= art_cat.votes.count.to_s + ' Vote(s)' %></em>
              </div>
        </div>
      </div>
    </li>
    <% end %>
  </ul>
</div>