<div class='row m-auto py-2'>
  <div class='col-3'></div>
  <div class='col-6'>
    <h2 class='text-center text-white'> Create Article <h2>
        <%= form_with model: @article, url: articles_path do |f| %>
        <%= show_errors(@article) %>
        <div class='input-group'>
          <span class='input-group-text'>
            <i class="fas fa-pen-fancy"></i>
          </span>
          <%= f.text_field :title, placeholder: 'Article title', class: 'form-control' %>
        </div>
        <div class='input-group mt-2'>
          <span class='input-group-text'>
            <i class="far fa-newspaper"></i>
          </span>
          <%= f.text_area :text, placeholder: 'Article title',rows: 8, class: 'form-control' %>
        </div>
        <%= f.collection_select :category_id, Category.all, :id, :name, {prompt: 'Select Category'},{class: 'mt-2 form-select'}  %>
        <div class='input-group mt-2'>
          <span class='input-group-text'>
            <i class="fas fa-camera"></i>
          </span>
          <%= f.file_field :image, class: 'form-control', direct_upload: true %>
        </div>
        <div class='mt-3'>
          <%= f.submit 'Submit', class: 'btn btn-primary' %>
        </div>
        <% end %>
  </div>
</div>